extends base.pug

block content 
    if errorMessage 
        sapn=errorMessage
    form(method="POST", action="/videos/upload")
        input(placeholder="Title", required, type="text",name="title", minlength=5, maxlength=80)
        input(placeholder="Description", required, type="text",name="description", minlength=10, maxlength=100)
        input(placeholder="Hashtags, separated by comma", required, type="text",name="hashtags")
        input(type="submit", value="Upload Video")
    