extends ../base.pug

block content
    h4 Change Title of Video 
    form(method="POST")
        input(placeholder="Title", required, type="text",name="title", minlength=3, maxlength=80, value=video.title)
        input(placeholder="Description", required, type="text",name="description", minlength=5, maxlength=100, value=video.description)
        input(placeholder="Hashtags, separated by comma", required, type="text",name="hashtags", value=video.hashtags.join())
        input(value="save",type = "submit")